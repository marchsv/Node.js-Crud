extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Item
			small menu for editing item data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Item
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/item/editItem/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Item Code
									input(type='text',value="#{data.itemcode}",name='itemcode',placeholder='Enter Item Code', autofocus).form-control
								.form-group
									label
										| Name
									input(type='text',value="#{data.name}",name='name',placeholder='Enter Name', autofocus).form-control
								.form-group
									label
										| Brand
									input(type='text',value="#{ (brand == undefined) ? data.brand : brand }",name='brand',placeholder='Enter brand').form-control
								.form-group
									label
										| Unit
									input(type='text',value="#{ (unit == undefined) ? data.unit : unit }",name='unit',placeholder='Enter unit').form-control
								.form-group
									label
										| Total
									input(type='text',value="#{ (total == undefined) ? data.total : total }",name='total',placeholder='Enter total').form-control
								.form-group
									label
										| Price
									input(type='text',value="#{ (price == undefined) ? data.price : price }",name='price',placeholder='Enter price').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/item').btn.btn-primary.pull-right
									| Back